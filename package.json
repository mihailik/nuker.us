{
  "dependencies": {
    "esbuild": "^0.24.2",
    "three": "^0.172.0",
    "troika-three-text": "^0.52.3"
  },
  "scripts": {
    "build-rust": "cargo build --manifest-path ./rust/Cargo.toml --target wasm32-unknown-unknown && wasm-bindgen ./rust/target/wasm32-unknown-unknown/debug/nukerus_wasm.wasm --target web --out-dir ./rust/target/wasm-bindgen-web",
    "build-ruste": "cargo build --manifest-path ./rust/Cargo.toml --target wasm32-unknown-emscripten && wasm-bindgen ./rust/target/wasm32-unknown-emscripten/debug/nukerus_wasm.wasm --target web --out-dir ./rust/target/wasm-bindgen-web",
    "build-js": "esbuild js/index.js --loader:.wasm=binary --bundle --outdir=. --sourcemap --define:import.meta.url=\\\".\\\"",
    "start": "npm run build-js -- --serve --servedir=.",
    "build": "npm run build-rust && npm run build-js"
  }
}
